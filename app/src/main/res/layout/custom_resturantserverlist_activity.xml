<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/rlresServerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/resServerImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/resServerImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResServerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Navjivan Resturant"
                android:textColor="@color/black1"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <creadigol.com.tipper.RatingView
                    android:id="@+id/serverRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:drawable_empty="@drawable/rating_icon_black"
                    card_view:drawable_filled="@drawable/rating_icon_gold"
                    card_view:drawable_half="@drawable/rating_icon_half"
                    card_view:drawable_margin="2dp"
                    android:clickable="false"
                    android:isIndicator="true"
                    card_view:drawable_size="23dp"
                    card_view:is_indicator="false"
                    card_view:max_count="4"
                    card_view:rating="0" />

                <TextView
                    android:id="@+id/serverTotalRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:textColor="@color/black1"
                    android:text="11,000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Ratings"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black1"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/totalTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black1"
                android:text="Total Tip = $3,500" />

            <TextView
                android:id="@+id/serverDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                android:text="" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

