<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_search"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">


    <RelativeLayout
        android:id="@+id/rlUserReviewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/userReviewImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userReviewImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Navjivan Resturant"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <creadigol.com.tipper.RatingView
                    android:id="@+id/userRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:drawable_empty="@drawable/rating_icon_black"
                    app:drawable_filled="@drawable/rating_icon_gold"
                    app:drawable_half="@drawable/rating_icon_half"
                    app:drawable_margin="2dp"
                    android:clickable="false"
                    android:isIndicator="true"
                    app:drawable_size="23dp"
                    app:is_indicator="false"
                    app:max_count="4"
                    app:rating="0" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black1"
                    android:text="12-jan-2017" />
            </LinearLayout>

            <TextView
                android:id="@+id/userReviewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_details"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/userReviewImage"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/replayServerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ken belly"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ServerReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black2"
                android:text="Thank you"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_details"
            android:orientation="vertical"
            android:background="@color/green"
            android:layout_margin="5dp">
        <ImageView
            android:id="@+id/ivReplay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/arrowright" />
</LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

