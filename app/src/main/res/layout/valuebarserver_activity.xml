<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServerDeatailsActivity"
    tools:showIn="@layout/serverdetails_content_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/golgenicon"/>

        <com.philjay.valuebar.ValueBar
            android:id="@+id/valueBar4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/valueBar4Total"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/golgenicon"/>
        <com.philjay.valuebar.ValueBar
            android:id="@+id/valueBar3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/valueBar3Total"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/golgenicon"/>
        <com.philjay.valuebar.ValueBar
            android:id="@+id/valueBar2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/valueBar2Total"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/golgenicon"/>
        <com.philjay.valuebar.ValueBar
            android:id="@+id/valueBar1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/valueBar1Total"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>